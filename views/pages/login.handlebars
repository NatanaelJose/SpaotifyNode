<div id="login-container">
        <header>
            <h1>Login</h1>
            <p>Faça seu Login para ver suas músicas salvas!</p>
        </header>
        <form action="/login" method="POST">
            <article class="form-control">
                <label for="email">E-mail<span class="req">*</span></label>
                <input type="email" id="email" name="email" autocomplete="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" placeholder="Digite seu E-mail" required/>
            </article>
            <article class="form-control">
                <label for="senha1">Senha<span class="req">*</span></label>
                <input type="password" id="senha1" name="senha1" autocomplete="current-password" pattern="[a-z0-5]{8,}" placeholder="Digite sua Senha" required/>
            </article>
            <a href="#" id="forgot-password">Esqueceu a senha?</a>
            <button type="submit" id="submit-login">Fazer o Login</button>
            <div class="link">
                <span>Não possui Login? </span><a href="/register">Clique aqui para se registrar!</a>
            </div>
        </form>
    </div>
    <script src="../scripts/login.js"></script>