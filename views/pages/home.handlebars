<div class="music-container">
  <header>
        <button class="button" id="left-bar" onclick="showBar()"><i class="bi bi-list"></i></button>
        <h4 id="playlist-title">Playlist Sp√£otify</h4>
        {{#if cred}}
        <a href="/logout" id="user-enter" class="enter-btn button"><i class="bi bi-person"></i>
          <i style="position: absolute;"
          class="bi bi-person-fill"></i>
        </a>
        {{else}}
        <a href="/login" id="user-enter" class="enter-btn button"><i class="bi bi-person"></i>
          <i style="position: absolute;"
          class="bi bi-person-fill"></i>
        </a>
        {{/if}}
      </header>
      <div class="cover-container">
        <img alt="Disc Cover" id="cover" />
      </div>
      <audio id="audio"></audio>
      <div id="bellow-cover">
        <div id="song-info">
          <div id="song-name">Nome da musica</div>
          <div id="band-name" class="light-color">nome da banda</div>
        </div>
        <button id="like" class="fav-btn button light-color">
          <i class="bi bi-heart"></i>
          <i
            style="position: absolute;"
            class="bi bi-heart-fill"
          ></i>
        </button>
      </div>
      <div id="progress-container">
        <div id="progress-bar">
          <div id="current-progress"></div>
          <div id="progress-rounddot"></div>
        </div>
        <div id="time-box">
          <div id="song-time">00:00:00</div>
          <div id="total-time">00:00:00</div>
        </div>
      </div>
      <div id="button-container">
        <button id="shuffle" class="button button-action">
          <i class="bi bi-shuffle"></i>
        </button>
        <button id="back" class="button button-navigate">
          <i class="bi bi-skip-start-fill"></i>
        </button>
        <button id="play" class="button button-biggest">
          <i class="bi bi-play-circle-fill"></i>
        </button>
        <button id="skip" class="button button-navigate">
          <i class="bi bi-skip-end-fill"></i>
        </button>
        <button id="repeat" class="button button-action">
          <i class="bi bi-arrow-repeat"></i>
        </button>
      </div>
</div>
    <script>
      function showBar(){
        const sideBar = document.querySelector("div.menu-bar");
        sideBar.classList.toggle('active');
      }
    </script>
